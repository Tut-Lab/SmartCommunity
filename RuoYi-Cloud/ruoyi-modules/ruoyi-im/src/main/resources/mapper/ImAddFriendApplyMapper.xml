<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.im.mapper.ImAddFriendApplyMapper">

    <resultMap type="ImAddFriendApply" id="ImAddFriendApplyResult">
        <result property="applyId"    column="apply_id"    />
        <result property="reqUserId"    column="req_user_id"    />
        <result property="resUserId"    column="res_user_id"    />
        <result property="applyContent"    column="apply_content"    />
        <result property="remarkContent"    column="remark_content"    />
        <result property="applyState"    column="apply_state"    />
        <result property="origin"    column="origin"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <association property="sysUser"    column="req_user_id" javaType="SysUser" resultMap="SysUserResult" />
    </resultMap>

    <resultMap type="SysUser" id="SysUserResult">
        <id     property="userId"       column="user_id"      />
        <result property="deptId"       column="dept_id"      />
        <result property="userName"     column="user_name"    />
        <result property="nickName"     column="nick_name"    />
        <result property="email"        column="email"        />
        <result property="phonenumber"  column="phonenumber"  />
        <result property="sex"          column="sex"          />
        <result property="avatar"       column="avatar"       />
        <result property="password"     column="password"     />
        <result property="status"       column="status"       />
        <result property="delFlag"      column="del_flag"     />
        <result property="loginIp"      column="login_ip"     />
        <result property="loginDate"    column="login_date"   />
        <result property="createBy"     column="create_by"    />
        <result property="createTime"   column="create_time"  />
        <result property="updateBy"     column="update_by"    />
        <result property="updateTime"   column="update_time"  />
        <result property="remark"       column="remark"       />
    </resultMap>

    <sql id="selectImAddFriendApplyVo">
        select apply_id, req_user_id, res_user_id, apply_content, remark_content, apply_state, origin, create_time, update_time from im_add_friend_apply
    </sql>

    <select id="selectImAddFriendApplyList" parameterType="ImAddFriendApply" resultMap="ImAddFriendApplyResult">
        <include refid="selectImAddFriendApplyVo"/>
        <where>
            <if test="reqUserId != null  and reqUserId != ''"> and req_user_id = #{reqUserId}</if>
            <if test="resUserId != null  and resUserId != ''"> and res_user_id = #{resUserId}</if>
            <if test="applyContent != null  and applyContent != ''"> and apply_content = #{applyContent}</if>
            <if test="remarkContent != null  and remarkContent != ''"> and remark_content = #{remarkContent}</if>
            <if test="applyState != null "> and apply_state = #{applyState}</if>
            <if test="origin != null  and origin != ''"> and origin = #{origin}</if>
        </where>
    </select>

    <select id="selectImAddFriendApplyListByResUserId" parameterType="String" resultMap="ImAddFriendApplyResult">
        select idfa.apply_id, idfa.req_user_id, idfa.res_user_id, idfa.apply_content, idfa.remark_content, idfa.apply_state, idfa.origin, idfa.create_time, idfa.update_time,
               u.user_id, u.dept_id, u.nick_name, u.user_name, u.email, u.avatar, u.phonenumber
        from im_add_friend_apply idfa left join sys_user u on u.user_id = idfa.req_user_id where idfa.res_user_id=#{resUserId}
    </select>


    <select id="selectImAddFriendApplyByApplyId" parameterType="String" resultMap="ImAddFriendApplyResult">
        <include refid="selectImAddFriendApplyVo"/>
        where apply_id = #{applyId}
    </select>

    <insert id="insertImAddFriendApply" parameterType="ImAddFriendApply">
        insert into im_add_friend_apply
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="applyId != null">apply_id,</if>
            <if test="reqUserId != null">req_user_id,</if>
            <if test="resUserId != null">res_user_id,</if>
            <if test="applyContent != null">apply_content,</if>
            <if test="remarkContent != null">remark_content,</if>
            <if test="applyState != null">apply_state,</if>
            <if test="origin != null">origin,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="applyId != null">#{applyId},</if>
            <if test="reqUserId != null">#{reqUserId},</if>
            <if test="resUserId != null">#{resUserId},</if>
            <if test="applyContent != null">#{applyContent},</if>
            <if test="remarkContent != null">#{remarkContent},</if>
            <if test="applyState != null">#{applyState},</if>
            <if test="origin != null">#{origin},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <update id="updateImAddFriendApply" parameterType="ImAddFriendApply">
        update im_add_friend_apply
        <trim prefix="SET" suffixOverrides=",">
            <if test="reqUserId != null">req_user_id = #{reqUserId},</if>
            <if test="resUserId != null">res_user_id = #{resUserId},</if>
            <if test="applyContent != null">apply_content = #{applyContent},</if>
            <if test="remarkContent != null">remark_content = #{remarkContent},</if>
            <if test="applyState != null">apply_state = #{applyState},</if>
            <if test="origin != null">origin = #{origin},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where apply_id = #{applyId}
    </update>

    <delete id="deleteImAddFriendApplyByApplyId" parameterType="String">
        delete from im_add_friend_apply where apply_id = #{applyId}
    </delete>

    <delete id="deleteImAddFriendApplyByApplyIds" parameterType="String">
        delete from im_add_friend_apply where apply_id in
        <foreach item="applyId" collection="array" open="(" separator="," close=")">
            #{applyId}
        </foreach>
    </delete>
</mapper>