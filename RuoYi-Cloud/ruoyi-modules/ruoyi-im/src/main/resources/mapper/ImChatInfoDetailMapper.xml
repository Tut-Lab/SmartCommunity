    <sql id="selectImChatInfoDetailVo">
        select chat_detail_id, chat_id, user_id, type, self, content, send_time, latest, state, recall, receive from im_chat_info_detail
    </sql>

    <select id="selectImChatInfoDetailList" parameterType="ImChatInfoDetail" resultMap="ImChatInfoDetailResult">
        <include refid="selectImChatInfoDetailVo"/>
        <where>
            <if test="chatId != null  and chatId != ''"> and chat_id = #{chatId}</if>
            <if test="userId != null  and userId != ''"> and user_id = #{userId}</if>
            <if test="type != null "> and type = #{type}</if>
            <if test="content != null  and content != ''"> and content = #{content}</if>
            <if test="sendTime != null "> and send_time = #{sendTime}</if>
            <if test="latest != null "> and latest = #{latest}</if>
            <if test="state != null "> and state = #{state}</if>
            <if test="recall != null "> and recall = #{recall}</if>
            <if test="receive != null "> and receive = #{receive}</if>
            <if test="self != null "> and self = #{self}</if>
        </where>
    </select>

    <select id="selectImChatInfoDetailByChatDetailId" parameterType="Long" resultMap="ImChatInfoDetailResult">
        <include refid="selectImChatInfoDetailVo"/>
        where chat_detail_id = #{chatDetailId}
    </select>

    <insert id="insertImChatInfoDetail" parameterType="ImChatInfoDetail" useGeneratedKeys="true" keyProperty="chatDetailId">
        insert into im_chat_info_detail
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="chatDetailId != null">chat_detail_id,</if>
            <if test="chatId != null">chat_id,</if>
            <if test="userId != null">user_id,</if>
            <if test="type != null">type,</if>
            <if test="content != null">content,</if>
            <if test="sendTime != null">send_time,</if>
            <if test="latest != null">latest,</if>
            <if test="state != null">state,</if>
            <if test="recall != null">recall,</if>
            <if test="receive != null">receive,</if>
            <if test="self != null">self,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="chatDetailId != null">#{chatDetailId},</if>
            <if test="chatId != null">#{chatId},</if>
            <if test="userId != null">#{userId},</if>
            <if test="type != null">#{type},</if>
            <if test="content != null">#{content},</if>
            <if test="sendTime != null">#{sendTime},</if>
            <if test="latest != null">#{latest},</if>
            <if test="state != null">#{state},</if>
            <if test="recall != null">#{recall},</if>
            <if test="receive != null">#{receive},</if>
            <if test="self != null">#{self},</if>
        </trim>
    </insert>

    <update id="updateImChatInfoDetail" parameterType="ImChatInfoDetail">
        update im_chat_info_detail
        <trim prefix="SET" suffixOverrides=",">
            <if test="chatId != null">chat_id = #{chatId},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="type != null">type = #{type},</if>
            <if test="content != null">content = #{content},</if>
            <if test="sendTime != null">send_time = #{sendTime},</if>
            <if test="latest != null">latest = #{latest},</if>
            <if test="state != null">state = #{state},</if>
            <if test="recall != null">recall = #{recall},</if>
            <if test="receive != null">receive = #{receive},</if>
            <if test="self != null">self = #{self},</if>
        </trim>
        where chat_detail_id = #{chatDetailId}
    </update>

    <delete id="deleteImChatInfoDetailByChatDetailId" parameterType="Long">
        delete from im_chat_info_detail where chat_detail_id = #{chatDetailId}
    </delete>

    <delete id="deleteImChatInfoDetailByChatDetailIds" parameterType="String">
        delete from im_chat_info_detail where chat_detail_id in
        <foreach item="chatDetailId" collection="array" open="(" separator="," close=")">
            #{chatDetailId}
        </foreach>
    </delete>
